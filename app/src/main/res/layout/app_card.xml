<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="6dp"
    android:layout_margin="6dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1.0">

        <ImageView
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="5dp"
            android:id="@+id/appicon"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="name"
            android:layout_toRightOf="@id/appicon"
            android:id="@+id/textviewappname"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingTop="10dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="versionname"
            android:layout_below="@id/textviewappname"
            android:layout_alignLeft="@id/textviewappname"
            android:id="@+id/textviewversionname"
            android:singleLine="true"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="versioncode"
            android:layout_alignLeft="@id/textviewappname"
            android:layout_below="@id/textviewversionname"
            android:id="@+id/textviewversioncode"
            android:singleLine="true"
            android:paddingBottom="10dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

